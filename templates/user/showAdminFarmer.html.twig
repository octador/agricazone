<div class='container'>

 
<div class=" mt-5">

    {{ form_start(formStock) }}

        <div class="products-container d-flex align-items-center">

            {% for product in listProducts %}

                <div class="inline justify-content-center">

                    <input type="radio" 
                    display="none"
                    value="{{ product.name }}" 
                    name="product" 
                    id="{{ product.name }}">

                    <label for="{{ product.name }}">
                        <img src="{{ asset('assets/image/logoproduct/' ~ product.picture) }}" 
                        alt="{{ product.name }}" 
                        width="100px"/>
                    </label>

                </div>
            {% endfor %}

        </div>

    {{ form_end(formStock) }}

</div>
        <table class="table mt-5">

            <thead>
                <tr>
                    <th>Quantit&eacute;</th>
                    <th>Produit</th>
                    <th>Description</th>
                    <th>Prix unitaire</th>
                    <th>Point de collecte</th>
                    <th>Action</th>
                    <th>Statut</th>
                </tr>
            </thead>

            <tbody>

                {% for stockProduit in listStocks %}
                    <tr>
                        <td>{{ stockProduit.quantity }}</td>
                        <td>{{stockProduit.product.name}}</td>
                        <td>{{ stockProduit.description }}</td>
                        <td>{{ stockProduit.price }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
